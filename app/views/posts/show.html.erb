<!--フラッシュメッセージ-->
<p id="notice" class="text-center"><%= notice %></p>

<div class="container">
  <div class="row">
    <%= render 'layouts/errors', obj: @post %>
  
<!--ユーザー名刺-->
<%= render 'users/info', user: @post.user %>

<div class="content-box col-md-8 ml-5" style="margin-top:1em;">
  <h4><%= @post.title %></h4>
   
   <!--タグ-->
  <% @post_tags.each do |tag| %>
  <%= link_to tag.name,search_tag_path(tag_id: tag.id)%><%="(#{tag.posts.count})" %><% end %>
  <!--お気に入り-->
   <div id="<%=@post.id %>"><%= render 'favorites/favorite', post: @post %></div>
  <p><%== @post.content %></p>
</div>

<% if @post.user==current_user %>
<p><%= link_to '記事の編集', edit_post_path(@post),class:"btn btn-outline-secondary fas fa-edit" %></p>
<p><%= link_to"記事の削除",post_path(@post), method: :delete,data: { confirm: '本当に消しますか？' },class:'btn btn-outline-danger fas fa-ban'%></p>
<% end %>
  </div>
  <!--ここまでで１個目のrowが終わり-->

<div id="comments-area"><%= render "post_comments/comment",post: @post,post_comment: @post_comment %></div>


</div>

<style>

.content-box {
    border: double 5px #4ec4d3;
}

h4 {
  border-bottom: solid 3px black;
}


.comment {
  border-bottom: solid 3px #4ec4d3;
}

.user_box {
    padding: 0.5em 1em;
    margin: 1em 0;
    /*border: double 5px #5d627b;*/
}


</style>
