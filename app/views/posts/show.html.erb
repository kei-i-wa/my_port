<div class="container">
  <div class="row">
<p id="notice"><%= notice %></p>


<%= render 'users/info', user: @post.user %>

<div class="content-box col-md-8 ml-5" style="margin-top:1em;">

  <h4><%= @post.title %></h4>
  <p><%== @post.content %></p>
</div>

<% if @post.user=current_user %>
<%= link_to '編集', edit_post_path(@post),class:"btn btn-outline-secondary fas fa-edit" %>
<%= link_to '戻る', posts_path,class:"btn btn-outline-secondary fas fa-undo"  %>
<% else %>
<%= link_to '戻る', posts_path,class:"btn btn-outline-secondary fas fa-undo"  %>
<% end %>


</div>
</div>


<style>

.content-box {
    border: double 5px #4ec4d3;
}

h4 {
  border-bottom: solid 3px black;
}
</style>  
    