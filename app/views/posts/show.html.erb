<!--フラッシュメッセージ-->
<p id="notice" class="text-center"><%= notice %></p>

<div class="container">
  <div class="row">
<!--ユーザー名刺-->
<%= render 'users/info', user: @post.user %>

<div class="content-box col-md-8 ml-5" style="margin-top:1em;">
  <h4><%= @post.title %></h4>
   <p class="text-md-right">
      <i class="far fa-comment-dots"><%=@post.post_comments.count%></i>
      <%=@post.created_at.strftime('%Y/%m/%d') %>
   </p>
  <p><%== @post.content %></p>
</div>

<% if @post.user=current_user %>
<p><%= link_to '記事の編集', edit_post_path(@post),class:"btn btn-outline-secondary fas fa-edit" %></p>
<p><%= link_to"記事の削除",post_path(@post), method: :delete,data: { confirm: '本当に消しますか？' },class:'btn btn-outline-danger fas fa-ban'%></p>
<% end %>
  </div>
  <!--ここまでで１個目のrowが終わり-->

  <div class="row">
    <div class="user-box col-md-3"></div>
    <div class="col-md-8 ml-5" style="margin-top:1em;">
      
    　<div class="form-group">
      <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
      <%= f.text_area :comment, rows:'2',placeholder: "参考になったらコメントで伝えましょう",class:"form-control" %>
      <p><%=f.submit "コメントする",class:"btn btn-outline-secondary"%></p><% end %>
　　　</div>
　　　  <% @post.post_comments.each do |post_comment| %>
　　　  <h6 class="comment"><%= post_comment.comment %></h6>
　　　  <p class="text-right">
　　　    <%= attachment_image_tag post_comment.user,:profile_image,size:"20x20",fallback: "no_image.png"%><%= link_to user_path(post_comment.user) do %><%= post_comment.user.name %><% end %> <%= post_comment.created_at.strftime('%Y/%m/%d') %>
　　　  </p>
　　　   <% end %>
　　</div>
  </div>


</div>


<style>

.content-box {
    border: double 5px #4ec4d3;
}

h4 {
  border-bottom: solid 3px black;
}


.comment {
  border-bottom: solid 3px #4ec4d3;
}

.user_box {
    padding: 0.5em 1em;
    margin: 1em 0;
    /*border: double 5px #5d627b;*/
}
</style>
