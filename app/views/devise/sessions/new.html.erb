<div class='container'>
  <div class='row justify-content-center mx-auto'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>ログイン</h2>
      
      <% if flash[:alert] %>
      <div class="alert" role="alert">
      <p class="notice text-center" style="color:red;"><%= flash[:alert] %></p></div>
      <% end %>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,"パスワードを記憶" %>
    </div>
  <% end %>

  <div class="actions" style="margin:20px 0;">
    <%= f.submit "ログインする",class:"btn btn-outline-primary btn-block"%>
  </div>
<% end %>

<div>
  <p>新規会員登録は<%= link_to "こちら",new_user_registration_path, class: "border-bottom" %>からログインしてください。</p>
</div>


