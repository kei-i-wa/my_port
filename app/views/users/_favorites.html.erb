<div class="container">
 <div class="row">
  <%= render 'info', user: user %>
  
<% if favorite_posts.present?%>
<div class="col-md-7 ml-5">
  
  <% favorite_posts.each do |post| %>
  <!--投稿はカードで囲む-->
  <div class="card">
    <div class="card-body">
      <!--タイトル表示される文字数は２５文字までにしてます-->
      <h6 class="card-title">
        <%=link_to post_path(post.id) do %><%= post.title.truncate(25) %>
        <% end %>
      </h6>
      <!--お気に入り、コメント数、投稿者は部分テンプレ-->
        <div id="<%=post.id %>"><%= render 'favorites/favorite', post: post %></div>


    </div>
  </div>
  <% end %>
</div>
<% else %>
<p style="color:blue">現在のところ該当の記事はありません。</p>
<% end %>
<!--rowのとじタグ-->
</div>
</div>


<style>
.card{
  padding:0;
  margin:0;
  border:none;
}

.post_box {
    padding: 0.5em 1em;
    /*margin: 2em 0;*/
    color: #474747;
    background: whitesmoke;/*背景色*/
    border-left: double 7px #4ec4d3;/*左線*/
    border-right: double 7px #4ec4d3;/*右線*/
}


h6 {
  /*線の種類（実線） 太さ 色*/
  border-bottom: solid 3px black;
}
</style>