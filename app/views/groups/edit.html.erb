<div class='container'>
  <div class='row justify-content-center mx-auto'>
    <div class=" group_box col-sm-12 col-md-6 col-lg-7 px-5 px-sm-0 mt-5">
      <%= render 'layouts/errors', obj: @group %>
      

<%= form_with model: @group, local: true do |f| %>
    <div class="form-group">
      <%=f.label"勉強会名"%>
      <%= f.text_field:name,required: true,class:"form-control" %>
    </div>
    
    <div class="form-group">
      <%=f.label"紹介文"%>
      <%= f.text_area:introduction,required: true,class:"form-control"%>
    </div>
    
    <div class="from-group">
      <%=f.label"参加条件"%>
      <%= f.text_field:status,required: true,class:"form-control"%>
    </div>
    
    <div class="action" style="margin:20px 0;">
      <%=f.submit"変更を保存",class:"btn btn-light btn-block"%>
    </div>
    <% end %>
  
</div>
</div>
</div>
