<div class="group_box col-md-4">
    <div style="text-align:center;"><h6><i class="fas fa-search">勉強会を探す</i></h6></div>
    <div><%= form_with(url: groups_searches_path, local: true, method: :get, class: "search_form_group") do |f|%>
          <%= f.text_field :group_keyword, placeholder: "検索", class: "search_input_group"%>
          <%= f.submit "Search", class: "search_btn"%><% end %>
          <ul id="result_group"></ul>
    </div>
    <div style="text-align:center;"><h6><i class="fas fa-user-graduate">新規作成</i></h6></div>
    
    
    <%= form_with model: group, local: true do |f| %>
    <div class="form-group">
      <%=f.label"勉強会名"%>
      <%= f.text_field:name,required: true,class:"form-control" %>
    </div>
    
    <div class="form-group">
      <%=f.label"紹介文"%>
      <%= f.text_area:introduction,required: true,class:"form-control"%>
    </div>
    
    <div class="from-group">
      <%=f.label"参加条件"%>
      <%= f.text_field:status,required: true,class:"form-control"%>
    </div>
    
    <div class="action" style="margin:20px 0;">
      <%=f.submit"作成",class:"btn btn-light btn-block"%>
    </div>
    <% end %>
</div>