<div class="group_box col-md-4 mt-5">
  <div style="text-align:center;"><h6><i class="fas fa-search">勉強会を探す</i></h6>
  </div>
    <div class="mb-1">
      <%= form_with(url: groups_searches_path, local: true, method: :get, class: "search_form_group") do |f|%>
      <%= f.text_field :group_keyword, placeholder: "キーワード", class: "search_input_group"%>
      <%= f.submit"検索"%><% end %>
      <!--インクリメンタルサーチの結果が出力-->
      <ul id="result_group"></ul>
  　</div>

    <div style="text-align:center;"><h6><i class="fas fa-user-graduate">新規作成</i></h6>
    </div>
      <%= form_with model: group, local: true do |f| %>
      <div class="form-group">
        <%=f.label"勉強会名（必須）"%>
        <%= f.text_field:name,required: true,class:"form-control",placeholder: "2~25文字で入力してください。" %>
      </div>

      <div class="form-group">
        <%=f.label"紹介文（必須）"%>
        <%= f.text_area:introduction,required: true,class:"form-control",placeholder: "2~1000文字で入力してください。"%>
      </div>

      <div class="from-group">
        <%=f.label"参加条件（必須）"%>
        <%= f.text_field:status,required: true,class:"form-control",placeholder: "2~25文字で入力してください。"%>
      </div>

      <div class="action" style="margin:20px 0;">
        <%=f.submit"勉強会を作成",class:"btn btn-outline-info btn-block"%>
      </div>
      <% end %>
</div>